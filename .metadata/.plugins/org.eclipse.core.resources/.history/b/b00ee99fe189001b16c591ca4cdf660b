package com.spring.cleanmarket.item.controller;

import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;

import com.spring.cleanmarket.member.service.IMemberService;

@Controller
@RequestMapping("item")
public class ItemController {
	
//	@Autowired
//	private IMemberService service;
	
	public ItemController() {
		System.out.println("ItemController작동");
	}
	
	//판매하기 버튼 -> 상품등록 페이지 요청
	@GetMapping("/write")
	public String ItemWrite(HttpSession session,RedirectAttributes ra) {
		if(session.getAttribute("login")!= null) {
			return "item/write";
		}else {
			ra.addFlashAttribute("msg","msg");
			return "member/login";
		}
		
	}
	
}
